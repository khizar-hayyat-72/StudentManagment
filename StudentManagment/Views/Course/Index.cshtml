@model IEnumerable<StudentManagment.Models.Course>
@{
    ViewData["Title"] = "Index";
}


<h1 style="text-align:center">Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.CourseCode)
            </th>
            <th>
                Actions
            </th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseCode)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id = "@item.CourseId">Details</a> |
                    <a asp-action="Delete" asp-route-id = "@item.CourseId">Delete</a> |
                    <a asp-action="" asp-route-id = "@item.CourseId">Update</a>
                </td>   
            </tr>
        }
    </thead>
</table>

<a asp-action="Create">Add Course</a>


